generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  emailVerified DateTime?
  password      String
  phone         String?
  birthDate     DateTime?
  role          String    @default("CLIENT")
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  appointments   Appointment[]
  passwordResets PasswordReset[] // <- NOVO RELACIONAMENTO

  @@map("users")
}

// NOVO MODEL PARA PASSWORD RESET
model PasswordReset {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([token])
  @@map("password_resets")
}

model Service {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Float
  duration    Int
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  appointments Appointment[]

  @@map("services")
}

model Appointment {
  id            String    @id @default(cuid())
  date          DateTime
  time          String
  status        String    @default("PENDING")
  notes         String?
  justification String?
  justifiedAt   DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  serviceId String
  service   Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([serviceId])
  @@index([date])
  @@map("appointments")
}

model AvailableSlot {
  id        String   @id @default(cuid())
  dayOfWeek Int
  timeSlot  String
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([dayOfWeek, timeSlot])
  @@map("available_slots")
}
